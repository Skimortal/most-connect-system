{% extends 'base_logged_in.html.twig' %}

{% block title %}{{ 'customer_list'|trans }}{% endblock %}

{% block logged_in_content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="bgc-white bd bdrs-3 p-20 mB-20">
                    <h4 class="c-grey-900 mB-20">
                        {{ 'customer_list'|trans }}

                        <div class="float-end">
                            <a href="{{ path('customer_new') }}" class="btn btn-success">{{ 'create_new'|trans }}</a>
                        </div>
                    </h4>
                    <table id="dataTables" class="mcDataTable table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th>{{ 'type.label'|trans }}</th>
                            <th>{{ 'firstname.label'|trans }}</th>
                            <th>{{ 'lastname.label'|trans }}</th>
                            <th>{{ 'email.label'|trans }}</th>
                            <th>{{ 'street.label'|trans }}</th>
                            <th>{{ 'city.label'|trans }}</th>
                            <th>{{ 'zip.label'|trans }}</th>
                            <th>{{ 'country.label'|trans }}</th>
                            <th>{{ 'uid.label'|trans }}</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>{{ 'type.label'|trans }}</th>
                            <th>{{ 'firstname.label'|trans }}</th>
                            <th>{{ 'lastname.label'|trans }}</th>
                            <th>{{ 'email.label'|trans }}</th>
                            <th>{{ 'street.label'|trans }}</th>
                            <th>{{ 'city.label'|trans }}</th>
                            <th>{{ 'zip.label'|trans }}</th>
                            <th>{{ 'country.label'|trans }}</th>
                            <th>{{ 'uid.label'|trans }}</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        {% for customer in customers %}
                            <tr>
                                <td><a href="{{ path('customer_edit', { id: customer.id }) }}">{{ customer.type.value }}</a></td>
                                <td><a href="{{ path('customer_edit', { id: customer.id }) }}">{{ customer.firstname }}</a></td>
                                <td><a href="{{ path('customer_edit', { id: customer.id }) }}">{{ customer.lastname }}</a></td>
                                <td><a href="{{ path('customer_edit', { id: customer.id }) }}">{{ customer.email }}</a></td>
                                <td><a href="{{ path('customer_edit', { id: customer.id }) }}">{{ customer.street }}</a></td>
                                <td><a href="{{ path('customer_edit', { id: customer.id }) }}">{{ customer.city }}</a></td>
                                <td><a href="{{ path('customer_edit', { id: customer.id }) }}">{{ customer.zip }}</a></td>
                                <td><a href="{{ path('customer_edit', { id: customer.id }) }}">{{ customer.country }}</a></td>
                                <td><a href="{{ path('customer_edit', { id: customer.id }) }}">{{ customer.uid }}</a></td>
                            </tr>
                        {% else %}
                            <tr>
                                <td>{{ 'no_data_found'|trans }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
