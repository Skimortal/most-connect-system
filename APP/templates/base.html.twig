{# templates/adminator/base.html.twig #}
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ 'homepage_title'|trans }}{% block title %}{% endblock %}</title>

    {# Adminator CSS #}
    {% if app.environment == 'dev' %}
        {# Lokale Umgebung #}
        {{ encore_entry_link_tags('app') }}
    {% else %}
        {# Produktion #}
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    {% endif %}
    <link rel="stylesheet" href="{{ asset('adminator/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/datatables.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
    {% block stylesheets %}{% endblock %}

    {% if app.environment == 'dev' %}
        {# Lokale Umgebung #}
        {{ encore_entry_script_tags('app') }}
    {% else %}
        {# Produktion #}
        <script src="{{ asset('build/app.js') }}"></script>
    {% endif %}
    <script src="{{ asset('adminator/main.js') }}"></script>
    <script src="{{ asset('js/datatables.min.js') }}"></script>
    <script src="{{ asset('js/custom.js') }}"></script>
</head>
<body class="app">

{% if app.environment != 'dev' %}
{% include 'adminator/partials/_loader.html.twig' %}
{% endif %}

{% block body %}{% endblock %}

{% block javascripts %}{% endblock %}
</body>
</html>
