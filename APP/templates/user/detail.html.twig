{% extends 'base_logged_in.html.twig' %}

{% block title %}{{ 'user_detail_title'|trans }}{% endblock %}

{% block logged_in_content %}
    <h1 class="mb-4">{{ 'user_detail_title'|trans }}</h1>

    {% form_theme form 'form/adminator_bootstrap_5_layout.html.twig' %}

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <div class="mb-3 row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">{{ 'save'|trans }}</button>
            <a href="{{ path('user_list') }}" class="btn btn-secondary">{{ 'cancel'|trans }}</a>
            {% if user.id %}
            <a href="{{ path('user_delete', {'id': user.id}) }}" class="btn btn-danger" onclick="return confirm({{ 'confirm_delete'|trans }});">{{ 'delete'|trans }}</a>
            {% endif %}
        </div>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}

{% endblock %}
