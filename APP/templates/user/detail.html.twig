{% extends 'base_logged_in.html.twig' %}

{% block title %}User Detail{% endblock %}

{% block logged_in_content %}
    <h1 class="mb-4">User Detail</h1>

    {% form_theme form 'form/adminator_bootstrap_5_layout.html.twig' %}

    {{ form_start(form) }}
    {{ form_row(form.username) }}
    {{ form_row(form.company) }}
    {{ form_row(form.firstName) }}
    {{ form_row(form.lastName) }}
    {{ form_row(form.email) }}
    {{ form_row(form.phoneNumber) }}
    {{ form_row(form.mobileNumber) }}
    {{ form_row(form.faxNumber) }}
    {{ form_row(form.position) }}
    {{ form_row(form.department) }}
    {{ form_row(form.isActive) }}

    <div class="mb-3 row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Speichern</button>
            <a href="{{ path('user_list') }}" class="btn btn-secondary">Abbrechen</a>
            <a href="{{ path('user_list') }}" class="btn btn-danger">LÃ¶schen</a>
        </div>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}

{% endblock %}
