{% extends 'base_logged_in.html.twig' %}

{% block title %}{{ 'user_list'|trans }}{% endblock %}

{% block logged_in_content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="bgc-white bd bdrs-3 p-20 mB-20">
                    <h4 class="c-grey-900 mB-20">
                        {{ 'user_list'|trans }}

                        <div class="float-end">
                            <a href="{{ path('user_new') }}" class="btn btn-success">{{ 'create_new'|trans }}</a>
                        </div>
                    </h4>

                    {% for label, messages in app.flashes(['success', 'danger', 'warning', 'info']) %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                {{ message|raw }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <table class="mcDataTable table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th>{{ 'username.label'|trans }}</th>
                            <th>{{ 'roles.label'|trans }}</th>
                            <th>{{ 'firstName.label'|trans }}</th>
                            <th>{{ 'lastName.label'|trans }}</th>
                            <th>{{ 'email.label'|trans }}</th>
                            <th>{{ 'department.label'|trans }}</th>
                            <th>{{ 'position.label'|trans }}</th>
                            <th>{{ 'phoneNumber.label'|trans }}</th>
                            <th>{{ 'mobileNumber.label'|trans }}</th>
                            <th>{{ 'faxNumber.label'|trans }}</th>
                            <th>{{ 'action'|trans }}</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>{{ 'username.label'|trans }}</th>
                            <th>{{ 'roles.label'|trans }}</th>
                            <th>{{ 'firstName.label'|trans }}</th>
                            <th>{{ 'lastName.label'|trans }}</th>
                            <th>{{ 'email.label'|trans }}</th>
                            <th>{{ 'department.label'|trans }}</th>
                            <th>{{ 'position.label'|trans }}</th>
                            <th>{{ 'phoneNumber.label'|trans }}</th>
                            <th>{{ 'mobileNumber.label'|trans }}</th>
                            <th>{{ 'faxNumber.label'|trans }}</th>
                            <th>{{ 'action'|trans }}</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td><a href="{{ path('user_edit', { id: user.id }) }}">{{ user.username }}</a></td>
                                <td><a href="{{ path('user_edit', { id: user.id }) }}">{{ user.roles|join(', ') }}</a></td>
                                <td><a href="{{ path('user_edit', { id: user.id }) }}">{{ user.firstName }}</a></td>
                                <td><a href="{{ path('user_edit', { id: user.id }) }}">{{ user.lastName }}</a></td>
                                <td><a href="{{ path('user_edit', { id: user.id }) }}">{{ user.email }}</a></td>
                                <td><a href="{{ path('user_edit', { id: user.id }) }}">{{ user.department }}</a></td>
                                <td><a href="{{ path('user_edit', { id: user.id }) }}">{{ user.position }}</a></td>
                                <td><a href="{{ path('user_edit', { id: user.id }) }}">{{ user.phoneNumber }}</a></td>
                                <td><a href="{{ path('user_edit', { id: user.id }) }}">{{ user.mobileNumber }}</a></td>
                                <td><a href="{{ path('user_edit', { id: user.id }) }}">{{ user.faxNumber }}</a></td>
                                <td class="text-nowrap">
                                    <a href="{{ path('user_edit', {id: user.id}) }}" title="{{ 'edit'|trans }}">
                                        <span class="badge bg-info"><i class="ti-pencil-alt"></i></span>
                                    </a>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <a href="{{ path('user_delete', {id: user.id}) }}" class="confirmRemoveItem" title="{{ 'delete'|trans }}" data-confirm-message="{{ 'confirm_remove'|trans }}">
                                            <span class="badge bg-danger"><i class="ti-trash"></i></span>
                                        </a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
