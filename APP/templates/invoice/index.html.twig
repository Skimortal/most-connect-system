{% extends 'base_logged_in.html.twig' %}

{% block title %}{{ 'invoice_list'|trans }}{% endblock %}

{% block logged_in_content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="bgc-white bd bdrs-3 p-20 mB-20">
                    <h4 class="c-grey-900 mB-20">
                        {{ 'invoice_list'|trans }}

                        <div class="float-end">
                            <a href="{{ path('invoice_new') }}" class="btn btn-success">{{ 'create_new'|trans }}</a>
                        </div>
                    </h4>

                    {% for label, messages in app.flashes(['success', 'danger', 'warning', 'info']) %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                {{ message|raw }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <table id="dataTables" class="mcDataTable table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th>{{ 'invoiceNumber.label'|trans }}</th>
                            <th>{{ 'status.label'|trans }}</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>{{ 'invoiceNumber.label'|trans }}</th>
                            <th>{{ 'status.label'|trans }}</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        {% for invoice in invoices %}
                            <tr>
                                <td><a href="{{ path('invoice_edit', { id: invoice.id }) }}">{{ invoice.invoiceNumber }}</a></td>
                                <td>
                                    {% set label = invoice.status.label %}
                                    {% set class = {
                                        'Offen': 'bg-warning',
                                        'Versendet': 'bg-info',
                                        'Bezahlt': 'bg-success'
                                    }[label] %}
                                    <a href="{{ path('invoice_edit', { id: invoice.id }) }}">
                                        <span class="badge {{ class }}">{{ label }}</span>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3">{{ 'no_data_found'|trans }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
